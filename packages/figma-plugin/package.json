{
  "name": "@fig2tw/figma-plugin",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss --input ./src/styles/input.css --output ./src/styles/output.css",
    "build:js": "build-figma-plugin --typecheck --minify",
    "dev": "npm run build:css && concurrently npm:dev:css npm:dev:js",
    "dev:css": "tailwindcss --input ./src/input.css --output ./src/output.css --watch",
    "dev:js": "build-figma-plugin --typecheck --watch"
  },
  "dependencies": {
    "@fig2tw/shared": "*",
    "@fig2tw/tailwindcss-plugin": "*",
    "@create-figma-plugin/ui": "^3.2.0",
    "@create-figma-plugin/utilities": "^3.2.0",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^3.2.0",
    "@create-figma-plugin/tsconfig": "^3.2.0",
    "@figma/plugin-typings": "1.90.0",
    "concurrently": "^8.2.2",
    "preact": "^10.23.0",
    "tailwindcss": "^3.4.6",
    "typescript": ">=4"
  },
  "figma-plugin": {
    "editorType": [
      "figma"
    ],
    "id": "1376255637027661681",
    "name": "fig2tw",
    "api": "1.0.0",
    "main": "src/main.ts",
    "ui": "src/ui.tsx",
    "networkAccess": {
      "allowedDomains": [
        "https://fonts.gstatic.com"
      ]
    }
  }
}
